<h1> New Event </h1>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @event.errors.full_messages_for(:name).each do |err| %>
      <div><%= err %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
    <% @event.errors.full_messages_for(:location).each do |err| %>
      <div><%= err %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>

  <div><%= form.submit %></div>
<% end %>